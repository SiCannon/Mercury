@model Hub.Website.Models.ProductListViewModel

@{
    ViewBag.Title = "List";
}

<table class="table table-striped table-condensed table-hover">
    <thead>
        <tr>
            <th></th>
            <th>ID</th>
            <th>Title</th>
            @*<th>Artist</th>*@
        </tr>
    </thead>

    @foreach (var p in Model.Products)
    {
        <tr>
            <td>
                <div class="btn-group">
                    <a class="btn btn-mini" href="@Url.Action("Edit", new { id = p.ProductId })" title="edit"><i class="icon-edit"></i></a>
                    <a class="btn btn-mini" href="@Url.Action("Delete", new { id = p.ProductId })" title="delete"><i class="icon-trash"></i></a>
                </div>
            </td>
            <td>@p.ProductId</td>
            <td>@p.Title</td>
            @*<td>@p.Artist</td>*@
        </tr>
    }
</table>